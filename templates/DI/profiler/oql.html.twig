{# templates/data_collector/template.html.twig #}
{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% set icon %}
        {% include 'DI/profiler/logo_svg.html.twig' %}
        <span class="sf-toolbar-value">KPI</span>
    {% endset %}

    {% set text %}
        <div class="sf-toolbar-info-piece">
            Get information about iTop KPI
        </div>
    {% endset %}

    {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { 'link': true }) }}
{% endblock %}

{% block menu %}
    {# This left-hand menu appears when using the full-screen profiler. #}
    <span class="label">
        <i class="fas fa-database"></i>
        <span class="icon">
            {% include 'DI/profiler/logo_svg.html.twig' %}
        </span>
        <strong>iTop KPI</strong>
    </span>
{% endblock %}

{% block panel %}
    {# Optional, for showing the most details. #}
    <h2>iTop KPI</h2>

    <h3>Exec data</h3>

    <table>

        {% for execData in collector.execData %}
            <tr>
                <td>{{ dump(execData) }}</td>
            </tr>
        {% endfor %}

    </table>

    <h3>Stats</h3>

    <table>

        {% for stats in collector.stats %}
            <tr>
                <td>{{ dump(stats) }}</td>
            </tr>
        {% endfor %}

    </table>

{% endblock %}